.blog-post
  background: white
  padding: 10px
  margin: 5px
  border-radius: 5px
  font-size: 16px
  line-height: 26px
  font-family: Arial, Tahoma, Helvetica, FreeSans, sans-serif


.blog-post ul
  margin-top: 15px
  margin-bottom: 10px

.blog-post .created
  margin-right: 10px
  margin-top: 5px
  text-shadow: 2px 2px 5px #999;  

.blog-post h1, h2, h3, h4
  text-shadow: 2px 2px 5px #999;  
  font-family: monospace

.blog-post h2 
  margin-top: 20px
  margin-bottom: 10px

.blog-post .syntaxhighlighter
  margin: 20px
  width: 935px
