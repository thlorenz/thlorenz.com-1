@import nib

global-reset()

widget-border(radius = 5px, padding = 10px, margin = 5px) 
  background-color: rgba(2, 2, 2, 0.3);
  border-radius: radius 
  padding: padding
  margin: margin

engrave-text()
  text-shadow: rgba(253, 204, 197, 0.4) 1px 1px 0px

sidebar-width       =  150px
sidebar-margin-left =  10px
sidebar-left        =  sidebar-margin-left + sidebar-width + 12px

main-height = 500px


h1 
  font-size   :  30px

a 
  color:  #040449
  cursor     :  pointer

body
  width: 100%
  image: '/images/noise.png'
  background-color: rgba(150, 144, 100, 0.9);

header
  widget-border(5px    5px    0px    0px,
                10px   10px   10px   0px,
                10px   10px   0px    10px)
  engrave-text()
  color: #350808
  height:  110px
  float: top

  nav
    width      :  sidebar-width
    text-align :  center
    float: left

    ul
      li
        margin     :  8px
        font-size  :  16px
        transition :  font-size 100ms 0ms ease-in

        &:hover
          transition: font-size 100ms 0ms ease-in
          font-size: 18px
        
  h1
    padding: 10px
    line-height: 30px
    text-align: center
  
article
  widget-border(0px    0px    5px    5px,
                10px   10px   10px   0px,
                2px    10px   10px   10px)
  engrave-text()
  float: top
  min-height: main-height 

  nav
    float: left

  section 
    padding: 10px
    float: left

.avatar
  padding: 2px
  border: 1px solid #DDD
  border-radius: 3px
  float: right
