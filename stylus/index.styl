@import nib
@import github-nav
@import markdown-body
@import markdown-highlight
@import blog
@import blog-nav

global-reset()

widget-border(radius = 5px, padding = 10px, margin = 5px) 
  background-color: rgba(2, 2, 2, 0.3);
  border-radius: radius 
  padding: padding
  margin: margin

engrave-text()
  text-shadow: rgba(253, 204, 197, 0.4) 1px 1px 0px

sidebar-width       =  250px
sidebar-margin-left =  5px
sidebar-right        =  sidebar-margin-left + sidebar-width + 2px

header-height = 130px

h1 h2 h3 h4
  font-weight :  bold
  font-family: monospace
h1
  font-size   :  30px
  text-shadow: 2px 2px 5px #999;  
h2
  font-size   :  26px
h3
  font-size   :  24px
h3
  font-size   :  18px

em 
  font-style: italic
a 
  color:  #040449
  cursor:  pointer
  text-decoration: none
  engrave-text()

  &:hover
    text-decoration: inherit

html
  height: 100%
    
body
  width: 100%
  height: 100%
  margin: 0
  padding: 0
  image: '/images/noise.png'
  background-color: rgba(198, 223, 247, 0.9)

.sidebar
  float: left
  engrave-text()
  color: #222429
  width: sidebar-width
  min-height: 100%
  margin-bottom: auto
  margin-left: 5px

header
  height:  header-height
  widget-border(5px    0px    0px    0px,
                10px   10px   10px   0px,
                0px    0px   0px     0px)

  h1
    margin: 0px 0px 10px 20px
    
    line-height: 30px
  img
    float: left
    border: 1px solid #DDD
    border-radius: 3px
    margin-left: 20px
  nav
    text-align :  center
    height: header-height + 20px

    ul
      margin-top: 18px
      li
        margin     :  8px
        font-size  :  16px

        &:hover
          transition: font-size 100ms 0ms ease-in
          font-size: 18px

.sidebar > nav
  widget-border(0px    0px    0px    5px,
                5px    5px    5px    5px,
                2px    0px   0px     0px)
  ul
    li
      margin:  5px 0px 5px 0px

article
  engrave-text()
  min-height: 100%
  widget-border(0px    5px    5px    0px,
                0px   0px   0px   0px,
                2px    10px   10px  sidebar-right)
  section 
    padding: 10px
    float: top

.icon.star
  background-image: url("/images/star.png");
  background-repeat: no-repeat
  padding-left: 20px

