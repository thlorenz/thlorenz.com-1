<!DOCTYPE html>
<html>
<head>
  {{> head }}
</head>
<body>

  <nav class="navbar navbar-inverse row">
    <div class="navbar-inner">
        <div class="span2 avatar">
          <img src="/img/avatar.jpeg">
        </div>
        <h1 class="offset3">Thorsten Lorenz</h1>
        <div class="offset4">
          <ul class="nav main">
            <li> <a href="/blog">Blog</a> </li>
            <li> <a href="/github">Github</a> </li>
            <li> <a href="/about">About</a> </li>
          </ul>
        </div>
    </div>
  </nav>

  <section class="row main">
      <nav class="sidebar offset1 span3">
        <ul class="nav">
          {{#if model }}
          {{#if model.sidebar}}
            {{{ exec sidebar model.sidebar }}}
          {{/if}}
          {{/if}}
        </ul>
      </nav>
      <article class="content span12">
        {{#if model }}
        {{#if model.content}}
          {{{ exec content model.content }}}
        {{/if}}
        {{/if}}
      </article>
    </div>
  </section>
</div>

</body>
{{> scripts }}
</html>
